<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up Form</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body style="background-color: #ffc2cd;">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card px-5 py-3">
          <div class="card-body">
            <h2 class="card-title font-weight-bold " style="color: #ff084a;">Sign Up</h2>
            <h6 class="font-weight-light mb-4"> Please fill in this form to create an account</h6>
            <!-- form submission -->
            <form action="/signup" method="post">
              <div class="row">
                <div class="col-md-12">
                  <input type="text" class="form-control bg-light mb-3 border-0" id="user name" placeholder="User Name" name="username" required>
                </div>
               </div>
              <div class="form-group">
                  <input type="email" class="form-control bg-light border-0" id="email" placeholder="Email" name="email" required>
              </div>

              <div class="form-group">
                  <input type="password" class="form-control bg-light border-0" id="password" placeholder="Password" name="password" required>
              </div>

              <div class="form-group">
                  <input type="password" class="form-control bg-light border-0" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required>
              </div>

              <div class="form-group form-check">
                 <label class="form-check-label">
                 <input type="checkbox" class="form-check-input bg-light" name="remember" required> I accept the<a href="#">Terms of Use</a> & <a href="#" > Privacy Policy</a>
                 </label>
              </div>
              <button type="submit" class="btn px-5" style="background-color: 	#ff6289;">Sign Up</button>
            </form>
          </div>
        </div>
           <div class="text-center mt-3">
               <p style="color: #877068;">Already have an account? <a style="color: #877068;" href="/login"> Login here. </a></p>
           </div>
           <!-- error display -->
  <% if (message) { %>
    <div style="color: red;">
      <ul>
       
          <li><%= message %></li>
     
      </ul>
    </div>
  <% } 
  if (errors.length > 0) { %>
    <div style="color: red;">
      <ul>
        <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
      </div>
    </div>
</div>
</body>
</html>
